{
  "workspaces": [
    "packages/common",
    "packages/vue",
    "packages/vite-plugin",
    "packages/example"
  ],
  "scripts": {
    "start": "npm run dev",
    "dev": "run-p dev:*",
    "dev:vue": "npm run dev --workspace packages/vue",
    "dev:vite-plugin": "npm run dev --workspace packages/vite-plugin",
    "build": "npm run build --workspaces --if-present",
    "publish": "npm publish --workspaces --if-present"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.4.0",
    "npm-run-all": "^4.1.5",
    "typescript": "5.0.4",
    "vite": "^4.5.0",
    "vite-plugin-dts": "^3.6.1"
  }
}
